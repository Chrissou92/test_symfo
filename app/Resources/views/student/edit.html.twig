{% extends 'base.html.twig' %}

{% block body %}
    <h1>Student edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-primary btn-edit" type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('student_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-primary" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}


{% block stylesheets %}
<style>

    ul {
        list-style-type: none;
        padding: 0;
        display: inline-flex;
    }
    .btn {
        margin-right: 0.5em;
    }
    input .btn {
        margin-bottom: 1em;
    }
    .btn-edit {
        margin-bottom: 1em;
    }
        }
</style>
{% endblock %}
