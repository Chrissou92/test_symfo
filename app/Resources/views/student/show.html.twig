{% extends 'base.html.twig' %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ student.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ student.lastName }}</td>
            </tr>
            <tr>
                <th>Numetud</th>
                <td>{{ student.numEtud }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('student_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-primary" href="{{ path('student_edit', { 'id': student.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-primary" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% block stylesheets %}
<style>
    ul {
        list-style-type: none;
        padding: 0;
        display: inline-flex;
    }
    .btn {
        margin-right: 0.5em;
    }
    }
</style>
{% endblock %}
